<div id="main">
  <div id="col1">
    <div id="col1_content" class="clearfix">
      <!-- add your content here -->
			<h2>COL_1
				
			</h2>
			<% if col1.any?  %>
			<% col1.each_with_index do |c, i| %>
			<%= content_tag(:div, "Nr. #{i.to_i+1}") %>
			<%= content_tag(:div, "Company: #{c.company.to_s}" , :class=>"company")%>
			<%= content_tag(:div, "Title: #{c.title.to_s}" , :class=>"company")%>
			<%= tag("br") %>
			<% end  %>
			<% end %>
    </div>
  </div>
  <div id="col2">
    <div id="col2_content" class="clearfix">
      <!-- add your content here -->
			<h2>COL_2</h2>
			<%= col2 %>
    </div>
  </div>
  <div id="col3">
    <div id="col3_content" class="clearfix">
      <!-- add your content here -->
			<h2>COL_3</h2>
    </div>
